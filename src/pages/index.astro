---
import Page from '../layouts/Page.astro';
import Social from '../components/Social.astro';
import { Image } from 'astro:assets';
import logo from "../images/logo.png"
import consulenze from "../images/momina_indovina.png";
import trattamenti from "../images/healing_hands.png";
import percorsi from "../images/0_3.1.png";
import hero from "../images/studio.jpeg";
---

<Page title="Studio Olistico di Romina Fabi">
	<section class="absolute top-0 left-0 w-full h-[90vh] md:h-[100vh] flex flex-col" id="home">
		<div class=" bg-hero-pattern w-full h-full absolute top-0 left-0 bg-auto bg-bottom z-0 brightness-50" />
		<Social />
		<div id="box_logo" class="flex flex-col justify-center items-center max-w-[360px] mx-auto z-10">
			<Image
			src={logo}
			alt="Green&Fresh Logo"
			quality={"max"}
			loading="eager"
			decoding="async"
			width={100}
			height={100}
			class={`w-[100px] h-[100px] p-1 rounded-full transition duration-300 mb-2 ${
			  Astro.url.pathname.toString() === "/"
				 ? "bg-white"
				 : "bg-[#d4d4d4] group-hover:bg-white"
			}`}
		 />
			<h1 class="text-4xl title_font">Studio Olistico</h1>
			<div class="w-full flex flex-row items-center gap-2">
			  <span class="border-b border-[#ffffff] w-full"></span>
			  <span class="text-xs">
				 di
			  </span>
			  <span class="border-b border-[#ffffff] w-full"></span>
			</div>
			<h2 class="spacing text-xs">Romina Fabi</h2>
		</div>
		<div class="w-full text-center grow flex justify-center items-center flex-col z-10">
			<h1 id="typewriter" class="title_font text-3xl"></h1>
			<h2 id="typewriter_sub" class="spacing text-sm"></h2>
		</div>
		<div class="flex flex-col w-full justify-center items-center pb-4 md:pb-0 z-10">
			<a
				href="https://rominafabi.it/servizi"
				target="_self"
				class="bg-opacity-80 backdrop-blur spacing text-xs my-4 py-4 px-8 bg-main rounded-lg text-white border border-gold hover:bg-white hover:text-main transition-all duration-300 text-center"
			>
				Scopri tutti i miei servizi
			</a>
			<a
			id="chevron_down"
			href="/#servizi"
			target="_self"
			data-te-smooth-scroll-init
			class="bg-opacity-80 backdrop-blur spacing text-xs py-4 px-4 my-4 bg-main rounded-full group text-white hover:bg-opacity-50 border border-gold transition-all duration-300"
		>
		<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-down group-hover:scale-105 transition duration-300" viewBox="0 0 16 16">
			<path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
		 </svg>
		</a>
		</div>
	</section>
	<div class="h-[81vh] md:h-[90vh]">
	</div>
	<section class="min-h-[90vh] h-full flex flex-col gap-4 md:flex-row justify-center items-center relative border-t border-b border-gold" id="services_container">
		<div class="bg-black-pattern absolute top-0 left-0 w-full bg-center h-full opacity-40 bg-cover"/>
		<div id="servizi" class="h-[75px]"></div>
		<a href="https://rominafabi.it/servizi/consulenze" class="w-full relative group" id="consulenze_container">
			<div class="text-sm md:text-lg spacing absolute z-10 inset-0 flex items-center justify-center lg:group-hover:text-2xl transition-all duration-300 ">
				<p class="bg-main backdrop-blur bg-opacity-70 py-4 px-8 rounded-lg border border-gold text-xs">Consulenze</p>
			</div>
			<Image src={consulenze} alt="Consulenze" class="max-h-[300px] lg:max-h-[450px] w-auto mx-auto rounded-xl brightness-90 group-hover:scale-105 transition-all duration-300  border border-gold" id="consulenze"/>
		</a>
		<a href="https://rominafabi.it/servizi/trattamenti" class="w-full relative group" id="trattamenti_container">
			<div class="text-sm md:text-lg spacing absolute z-10 inset-0 flex items-center justify-center lg:group-hover:text-2xl transition-all duration-300">
				<p class="bg-main backdrop-blur bg-opacity-70 py-4 px-8 rounded-lg border border-gold text-xs">Trattamenti</p>
			</div>
			<Image src={trattamenti} alt="Consulenze" class="max-h-[300px] lg:max-h-[450px] w-auto mx-auto rounded-xl brightness-90 group-hover:scale-105 transition-all duration-300 border border-gold" id="trattamenti"/>
		</a>
		<a href="https://rominafabi.it/servizi/percorsi" class="w-full relative group" id="percorsi_container">
			<div class="text-sm md:text-lg spacing absolute z-10 inset-0 flex items-center justify-center lg:group-hover:text-2xl transition-all duration-300">
				<p class="bg-main backdrop-blur bg-opacity-70 py-4 px-8 rounded-lg border border-gold text-xs">Percorsi</p>
			</div>
			<Image src={percorsi} alt="Consulenze" class="max-h-[300px] lg:max-h-[450px] w-auto mx-auto rounded-xl brightness-90 group-hover:scale-105 transition-all duration-300  border border-gold shadow-md" id="percorsi"/>
		</a>
	</section>
</Page>

<style>
	section {
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.spacing {
    font-family: "Open Sans", serif;
    letter-spacing:3px;
    text-transform: uppercase;
  }
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
<script>
import { animate, inView } from "motion"
import Typewriter from 'typewriter-effect/dist/core.js';

var type = new Typewriter('#typewriter', {
  cursor: "",
  autoStart: true,
  loop: true,
  delay: 'natural',
  pauseFor: 500,
});

  type.pauseFor(500)
  .typeString('Consulenze').pauseFor(10000).deleteChars(10)
  .typeString('Trattamenti').pauseFor(10000).deleteChars(12)
  .typeString('Percorsi').pauseFor(8000).deleteChars(10).start()

  var subType = new Typewriter('#typewriter_sub', {
	string: ["Tarologica", "Numerologica", "Oracolare"],
	cursor: "",
	autoStart: true,
	loop: true,
	delay: 'natural',
	deleteSpeed: 30,
  pauseFor: 500,
  })
  subType.pauseFor(2000)
  .typeString('Tarologiche, Oracolari e Numerologiche')
  .pauseFor(1500)
  .deleteChars(40)
  .pauseFor(1500)
  .typeString('Reiki, Cristalloterapia, Medicina Olistica e altro...')
  .pauseFor(1000)
  .deleteChars(60)
  .typeString('Workshop, Seminari, Laboratori Didattici...')
  .pauseFor(1000)
  .deleteChars(16)
  .start()

  animate(
	 "#box_logo",
	 {opacity: [
    0, // 0.5
    1,
  ],},{ duration: 2 }
  )

  inView("#services_container", ({ target }) => {
  animate(
    target.querySelectorAll("#consulenze_container"),
    { opacity: [0, 1], transform: "none" },
    { delay: 0.3, duration: 2, easing: [0.33, 0.66, 0.66, 1] }
  );
});
inView("#services_container", ({ target }) => {
  animate(
    target.querySelectorAll("#trattamenti_container"),
    { opacity: [0, 1], transform: "none" },
    { delay: 0.6, duration: 2, easing: [0.33, 0.66, 0.66, 1] }
  );
});
inView("#services_container", ({ target }) => {
  animate(
    target.querySelectorAll("#percorsi_container"),
    { opacity: [0, 1], transform: "none" },
    { delay: 0.9, duration: 2, easing: [0.33, 0.66, 0.66, 1] }
  );
});

  animate("#chevron_down", {
	y:[0,5,-5,0]
  },
  {
	duration:2,
	offset: [0, 0.25, 0.75],
	repeat: Infinity,
	});
</script>